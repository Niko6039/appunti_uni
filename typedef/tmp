#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define MAX 10

void stampa(int array[])
{
    for (int i = 0; i < MAX; i++)
    {
        // Stampiamo solo se il valore è maggiore di 0 (assumendo 0 come fine array o vuoto)
        if (array[i] > 0)
        {
            printf("%d", array[i]);
            // Aggiungiamo il trattino solo se l'elemento successivo esiste ed è > 0
            if (i < MAX - 1 && array[i + 1] > 0)
            {
                printf(" - ");
            }
        }
    }
    printf("\n");
}

void casuale(int array[])
{
    srand(time(NULL));
    for (int i = 0; i < MAX; i++)
    {
        array[i] = rand() % 10 + 1; // Numeri da 1 a 10
    }
}

void ordine(int array[], int pari[], int dispari[])
{
    int countP = 0, countD = 0;
    for (int i = 0; i < MAX; i++)
    {
        if ((array[i] % 2) != 0)
        { // Dispari
            dispari[countD] = array[i];
            countD++;
        }
        else
        { // Pari
            pari[countP] = array[i];
            countP++;
        }
    }
}

float media(int array[], int verifica)
{
    float somma = 0;
    int cont = 0;

    for (int i = 0; i < MAX; i++)
    {
        if (array[i] <= 0)
            continue; // Salta gli zeri (celle vuote)

        if (verifica == 0 && array[i] % 2 == 0)
        {
            // Caso Pari
            somma += array[i];
            cont++;
        }
        else if (verifica == 1 && array[i] % 2 != 0)
        {
            // Caso Dispari
            somma += array[i];
            cont++;
        }
    }

    if (cont == 0)
        return 0; // Evita la divisione per zero
    return somma / cont;
}

int main()
{
    int v[MAX];
    int pari[MAX] = {0};
    int dispari[MAX] = {0};

    casuale(v);
    printf("Array originale: ");
    stampa(v);

    ordine(v, pari, dispari);

    printf("Array Pari: ");
    stampa(pari);
    printf("Array Dispari: ");
    stampa(dispari);

    // 0 per pari, 1 per dispari
    printf("Media pari: %.2f\n", media(pari, 0));
    printf("Media dispari: %.2f\n", media(dispari, 1));

    return 0;
}